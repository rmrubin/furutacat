

set macros
set terminal png size 1600,900 font "arial,14"
set tmargin 1.5 
set bmargin 3.5
set lmargin 9
set rmargin 9
set key box lw 0.1 lc rgb "#000000" top right 
set output filename_png
set style data points
set label font "arial,24"
set xlabel "Time ( s )"
set ylabel "Angle ( Degrees, TDC = 180 )"
set y2label "Motor PWM ( %FS )"
set ytics nomirror
set ytics 90,45,270
set yrange [90:270]
set y2tics -100,25,100
set y2range [-100:100]
set grid x y2 lc rgb "#aaaaaa"
plot  filename_data using 1:3 axes x1y1 pt 7 ps 0.2 lc rgb "#00AAAA" title "Angle", \
      filename_data using 1:4 axes x1y2 pt 7 ps 0.2 lc rgb "#FF4444" title "PWM"

